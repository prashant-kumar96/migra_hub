{
  "compilerOptions": {
    "module": "node16",
    "noEmitOnError": false,  // Keep this for error supression at build
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false, // <--- Disable Strict Type Checking
     "noImplicitAny": false, // Disable implicit any check.
     "strictNullChecks": false, // Disable strict null checks
     "strictFunctionTypes": false, // Disable strict function type checks.
     "strictBindCallApply": false, // Disable strict bind call apply checks
     "strictPropertyInitialization": false, // Disable strict property initialization checks
      "noImplicitThis": false, // Disable implicit this checks
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"], 
    "typeRoots": ["./node_modules/@types"],
    "target": "es6"
  },
  "include": ["src/**/*.ts", "src/staticfiles/**/*"],
  "ts-node": {
    "esm": true
  },
  "exclude": ["node_modules"]
}