{
  "compilerOptions": {
    "module": "node16",
    "noEmitOnError": false,
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "target": "es6"
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "esm": true // «———— enabling ESM for ts-node
  },
  "exclude": ["node_modules"]
}
